  "compilerOptions": {
    "declaration": true
    , "emitDecoratorMetadata": true
    , "experimentalDecorators": true
    , "module": "commonjs"
    , "mapRoot": "/"
    , "moduleResolution": "node"
    , "noEmitOnError": true
    , "noImplicitAny": false
    , "outDir": "../dist/"
    , "rootDir": "."
    , "sourceMap": true
    , "target": "es5"
    , "inlineSources": true
